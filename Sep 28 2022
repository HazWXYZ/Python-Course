for x in range(20):
    if x % 9 == 0:
        print (x, 'is divisible by 9')
    elif x % 3 == 0:
        print (x, 'is divisible by 3')

------------------------
for x in range(20):
    if x % 9 == 0 and x %3==0:
        print (x, 'is divisible by 9')
        print (x, 'is divisible by 3')
    elif x % 9 == 0:
        print (x, 'is divisible by 9')
    elif x %3==0:
        print (x, 'is divisible by 3')
    
------------------------------------
